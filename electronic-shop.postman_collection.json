{
  "info": {
    "name": "Electronic Shop API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "1. Auth",
      "item": [
        {
          "name": "Login SuperAdmin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"super@techstore.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Public (Guest)",
      "item": [
        {
          "name": "Get Public Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/public/1/products",
              "host": ["{{baseUrl}}"],
              "path": ["public", "1", "products"]
            }
          }
        },
        {
          "name": "Get WhatsApp Link",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/public/products/1/whatsapp",
              "host": ["{{baseUrl}}"],
              "path": ["public", "products", "1", "whatsapp"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Private (Requires Token)",
      "item": [
        {
          "name": "Get Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products",
              "host": ["{{baseUrl}}"],
              "path": ["products"]
            }
          }
        },
        {
          "name": "Get Dashboard (SuperAdmin Only)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/reports/dashboard",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "dashboard"]
            }
          }
        }
      ]
    }
  ]
}